{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MacDL MkII",
  "version": "0.1.1",
  "identifier": "com.example.macdlmkii",
  "build": {
    "beforeBuildCommand": "pnpm vite build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:4173/",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MacDL MkII",
        "width": 960,
        "height": 720,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "11"
    }
  }
}
